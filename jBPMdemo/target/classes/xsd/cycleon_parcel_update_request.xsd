<?xml version="1.0" encoding="UTF-8"?>
<xs:schema id="ParcelUpdateRequest" elementFormDefault="qualified" targetNamespace="ParcelUpdateRequest.xsd" xmlns="ParcelUpdateRequest.xsd"
		   xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:auth="AuthenticationCreateRequest.xsd">
	<xs:import namespace="AuthenticationCreateRequest.xsd" schemaLocation="cycleon_create_authentication_request.xsd" />
    <xs:element name="ParcelUpdateRequest">
		<xs:complexType>
                    <xs:sequence>
                        <xs:element ref="auth:Authentication"  maxOccurs="1" minOccurs="1"/>
                        <xs:element name="CycleonId" type="CycleonIdType" maxOccurs="unbounded" minOccurs="1">
                            <xs:annotation>
                                <xs:documentation>CycleonId of the things we're linking.</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element name="ParcelType" type="xs:string" minOccurs="0" maxOccurs="1">
                            <xs:annotation>
                                <xs:documentation>Optional, update the parcel type</xs:documentation>
                            </xs:annotation>
                        </xs:element>
                        <xs:element name="PrimaryPostalId" type="xs:string" minOccurs="0" maxOccurs="1"/>
                        <xs:element name="Questions" type="QuestionsType" minOccurs="0" maxOccurs="1"/>
                    </xs:sequence>
		</xs:complexType>
	</xs:element>

    <xs:complexType name="QuestionsType">
    	<xs:sequence>
    		<xs:element name="Question" type="QuestionType" maxOccurs="unbounded" minOccurs="0"/>
    	</xs:sequence>
    </xs:complexType>

    <xs:complexType name="CycleonIdType">
        <xs:simpleContent>
            <xs:extension base="xs:string">
                <xs:attribute name="hash" type="xs:string">
                    <xs:annotation>
                        <xs:documentation>The hash of the cycleon id.</xs:documentation>
                    </xs:annotation>
                </xs:attribute>
            </xs:extension>
        </xs:simpleContent>
    </xs:complexType>

    <xs:complexType name="QuestionType">
    	<xs:simpleContent>
    		<xs:extension base="xs:string">
    			<xs:attribute name="ref" type="xs:string">
    				<xs:annotation>
    					<xs:documentation>Reference to a question. This can be the database ID of a question in Unicorn.</xs:documentation>
    				</xs:annotation>
				</xs:attribute>
    		</xs:extension>
    	</xs:simpleContent>
    </xs:complexType>
</xs:schema>